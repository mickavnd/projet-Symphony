{% block body %}

	<h1>
		Nos produits phares</h1>
	<div class="row">
		{% for p in products  %}


			<div class="col">
				<div class="card">
					<img src="{{p.mainpicture}}" class ="img-fluid" alt="">
					<div class="card-body">
						<h4 class="card-title">{{p.nom}} ({{p.Prix /100}} &euro)</h4>
							<span class="badge badge-info bg-primary">{{p.category.Name}}</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="{{path('product_show',{
							'category_slug':p.category.slug,
							'slug':p.slug
						})}}" class="btn btn-primary btn-sm">details</a>
						<a href="#" class="btn btn-success btn-sm">ajouter</a>

					</div>
				</div>
			</div>
		{% endfor %}
	</div>
