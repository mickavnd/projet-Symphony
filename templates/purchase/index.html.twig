{% extends "base.html.twig" %}

{% block  title %}
     mes commandes
{% endblock %}

{% block body %}

<h1>mes commendes</h1>
<table class="table"> 
<thead>
    <tr>
        <th>numero</th>
        <th>adresse</th>
        <th>date de commande</th>
        <th>Produits</th>
        <th> total de commande</th>
    </tr>
</thead>
<tbody>
{% for p in  purchases %}

<tr>
    <td>{{ p.id}}</td>
    <td>{{p.address}}<br>{{p.postalCode}},{{p.city}}</td>
    <td>{{p.purchaseAt | date('d/m/Y h:i') }}</td>
    <td>
    <ul>
    
    </ul>

    {% for item in p.purchaseItems %}

    <li>{{ item.quantity}}x {{item.productName}} ({{item.total / 100}} €)</li>
        
    {% endfor %}
    
    
    </td>
    <td>{{p.total / 100 }}€</td>
</tr>

{% endfor %}

</tbody>
</table>
    
{% endblock %}